@model IPublishedContent

<a href="@Model.Children.SingleOrDefault(c => c.DocumentTypeAlias == "news").UrlName">
    <h3>Nieuws</h3>
</a>
@foreach (var item in Model.Children.SingleOrDefault(c => c.DocumentTypeAlias == "news").Children)
{
    <h4>@item.Name</h4>
    <article>@Html.Raw(item.GetProperty("inhoud").Value.ToString().Substring(0, @item.GetProperty("inhoud").Value.ToString().Length > 100 ? 100 : @item.GetProperty("inhoud").Value.ToString().Length))</article>
}

<button type="button" class="btn btn-default">Meer</button>